		div.col-md-12.bootstrap-grid
			#point-image.powerwidget.powerwidget-as-portlet.orange.powerwidget-sortable(data-widget-editbutton='false',role='widget')
				header
						h2 Add Point Template
				div.inner-spacer
					form#input-masking.orb-form(class='{{addForm}}')
						fieldset
							section
								label.label Point Type
								label.input
									i.icon-append.fa.fa-star-o
									input#date2(placeholder='The name of the Point Type to display and select while adding points', name='type', ng-model='form.type')
							//- section
							//- 	label.label Add Attribute
