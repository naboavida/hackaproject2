							//- 	button.btn.btn-default(ng-click='submitNewAttribute()') Add Attribute
							section
								label.label Current Attributes
								table.table.table-striped
									thead
										tr
											th Name
											th Action
									tbody
										tr(ng-repeat='attr in templateAttributes')
											td {{attr.attribute}}
											td 
												button.btn.btn-danger.btn-xs Delete
										tr
											td
												input(placeholder='Type a new attribute name', name='typeattribute', ng-model='typeattribute')
											td
												button.btn.btn-default.btn-sm(ng-click='submitNewAttribute()') Add Attribute

							button.btn.btn-success(ng-click='submitNewPointTemplate()') Add Template
							p(style='{{lastAddedMsgStyle}};margin-top:15px;') {{lastAddedMsg}}
