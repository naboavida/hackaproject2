div.content-wrapper
	div.breadcrumb.clearfix
		ul
			li
				a(href='/')
					i.fa.fa-home.fa-2x
			li
				a(href='/projects') Projects
			li
				a(href='/dashboard/{{pid}}') Dashboard "{{project.title}}"
			li
				a(href='/addPoint/{{pid}}') Add Point
			li.active Add Point Template...
	div#powerwidgets.row
